{
  "name": "jamout-api",
  "version": "1.0.0",
  "description": "The API for Jamout - Built using GraphQL, DataLoader, Dgraph, DynamoDB, etc",
  "main": "src/index.js",
  "scripts": {
    "dev": "BABEL_DISABLE_CACHE=1 nodemon --inspect ./src/index.babel.js",
    "clean": "rm -rf build && mkdir build",
    "build": "babel -d ./build ./src",
    "prod": "NODE_ENV=production DEBUG=* pm2 start --no-daemon ./index.js",
    "test": "NODE_ENV=test nyc ava -v",
    "watch:test": "NODE_ENV=test ava -w -v"
  },
  "author": "gabriel p samson",
  "private": true,
  "license": "ISC",
  "ava": {
    "files": "./src/**/__tests__/**/*.test.js",
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": "airbnb",
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      }
    }
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "./src/**/__tests__/**/*.test.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-transform-runtime",
      [
        "babel-plugin-inline-import",
        {
          "extensions": [
            ".gql"
          ]
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.16.0",
    "babel-plugin-inline-import": "^2.0.4",
    "babel-plugin-istanbul": "^3.1.2",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.20.0",
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "nyc": "^10.0.0"
  },
  "dependencies": {
    "apiai": "^3.0.3",
    "apollo-errors": "^1.0.2",
    "app-module-path": "^2.1.0",
    "async": "^2.1.4",
    "aws-sdk": "^2.6.9",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "crypto-js": "^3.1.8",
    "dataloader": "^1.2.0",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "express-jwt": "^5.1.0",
    "graphql": "^0.8.2",
    "graphql-redis-subscriptions": "^1.1.5",
    "graphql-server-express": "^0.4.3",
    "graphql-subscriptions": "^0.2.2",
    "graphql-tools": "^0.8.4",
    "graphql-type-json": "^0.1.4",
    "helmet": "^3.0.0",
    "joi": "^10.0.1",
    "jsonwebtoken": "^7.2.1",
    "kue": "^0.11.5",
    "lodash": "^4.17.2",
    "nodemon": "^1.11.0",
    "redis": "^2.6.3",
    "request": "^2.79.0",
    "stripe": "^4.14.0",
    "subscriptions-transport-ws": "^0.3.1",
    "uuid": "^3.0.1",
    "vogels": "^2.2.0",
    "winston": "^2.3.0"
  }
}

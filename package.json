{
  "name": "jamout-api",
  "version": "1.0.0",
  "description": "The API for Jamout - Built using GraphQL, DataLoader, Dgraph, DynamoDB, etc",
  "main": "src/index.js",
  "scripts": {
    "dev": "BABEL_DISABLE_CACHE=1 nodemon --inspect=9229 ./src/index.babel.js",
    "clean": "rm -rf build && mkdir build",
    "build": "babel -d ./build ./src",
    "prod": "NODE_ENV=production pm2-docker ./index.js",
    "lint": "./node_modules/.bin/eslint .",
    "test": "echo 0",
    "watch:test": "NODE_ENV=test ava -w -v",
    "deploy": "npm run build:lambda && npm run build:lambda:node_modules && cd lambda && serverless --stage=production deploy",
    "build:lambda": "NODE_ENV=production babel --out-dir='lambda/graphql' ./src",
    "build:lambda:node_modules": "cd lambda && yarn && cd .."
  },
  "author": "gabriel p samson",
  "private": true,
  "license": "ISC",
  "ava": {
    "files": "src/**/__tests__/**/*.test.js",
    "require": [
      "./testSetup"
    ],
    "babel": "inherit"
  },
  "eslintConfig": {
    "envs": [
      "node"
    ],
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "no-loop-func": "off",
      "no-shadow": "off",
      "func-names": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "src"
          ]
        }
      }
    }
  },
  "babel": {
    "sourceMaps": true,
    "retainLines": true,
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-transform-runtime",
      [
        "babel-plugin-inline-import",
        {
          "extensions": [
            ".gql"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.24.1",
    "babel-plugin-inline-import": "^2.0.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.22.0",
    "eslint": "^3.14.1",
    "sinon": "^1.17.7"
  },
  "dependencies": {
    "apollo-errors": "^1.3.0",
    "app-module-path": "^2.1.0",
    "av": "^0.4.9",
    "aws-sdk": "^2.42.0",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "clean-deep": "^3.0.0",
    "cors": "^2.8.3",
    "crypto-js": "^3.1.9-1",
    "date-fns": "^1.28.3",
    "dotenv": "^4.0.0",
    "dynamo-merge": "^1.0.0",
    "express": "^4.14.1",
    "express-jwt": "^5.3.0",
    "graphql": "^0.9.6",
    "graphql-server-express": "^0.7.2",
    "graphql-tools": "^0.11.0",
    "graphql-type-json": "^0.1.4",
    "helmet": "^3.0.0",
    "joi": "^10.4.1",
    "jsonwebtoken": "^7.2.1",
    "lodash": "^4.17.2",
    "node-uuid": "^1.4.8",
    "ramda": "^0.23.0",
    "request": "^2.79.0",
    "request-promise": "^4.2.1",
    "rollbar": "^0.6.5",
    "s3-upload-stream": "^1.0.7",
    "sqs-consumer": "^3.6.0",
    "stripe": "^4.18.0",
    "uuid": "^3.0.1",
    "vogels": "^2.2.0",
    "winston": "^2.3.0"
  }
}
